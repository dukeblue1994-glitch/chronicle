# Chronicle Configuration
# Copy this file to .env and customize as needed

# Application Environment
# CHRONICLE_ENVIRONMENT=development
# CHRONICLE_DEBUG=true

# API Server
# CHRONICLE_API_HOST=0.0.0.0
# CHRONICLE_API_PORT=8000
# CHRONICLE_API_WORKERS=4
# CHRONICLE_API_RELOAD=false

# Database
# CHRONICLE_DB_PATH=data/chronicle.db

# Collector Settings
# CHRONICLE_COLLECTOR_INTERVAL=60
# CHRONICLE_COLLECTOR_STORY_LIMIT=60
# CHRONICLE_COLLECTOR_TIMEOUT=20

# Clustering Settings
# CHRONICLE_CLUSTER_BATCH_SIZE=400
# CHRONICLE_CLUSTER_MIN_SIZE=3
# CHRONICLE_CLUSTER_SCHEDULE=300

# Deduplication
# CHRONICLE_DEDUP_THRESHOLD=0.85
# CHRONICLE_DEDUP_NUM_PERM=128

# Embeddings
# CHRONICLE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# CHRONICLE_EMBEDDING_BATCH_SIZE=32
# CHRONICLE_EMBEDDING_DEVICE=cpu

# Summarization
# CHRONICLE_SUMMARY_MAX_SENTENCES=3
# CHRONICLE_SUMMARY_DETAIL_SENTENCES=5

# Logging
# CHRONICLE_LOG_LEVEL=INFO
# CHRONICLE_LOG_FORMAT=text
# CHRONICLE_LOG_FILE=logs/chronicle.log
